    <link rel="stylesheet" type="text/css" href="/css/style.css">
	<link href="/css/jquery.mCustomScrollbar.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="http://www.localgovdigital.info/favicon.ico" />
	<!--[if lte IE 8]><script src="/js/html5shiv.js"></script><link rel="stylesheet" href="/css/ie8.css" /><![endif]-->
    <script>
        function hideMe(){
        $.cookie('alert-box', 'close', {expires:7 });
        $(".close").hide();
    }
    </script>
</head>
<body class="homepage">
    <div id="main" class="container">
	 <div class="row">
            <div class="col-md-4">
				    <!-- Header -->
    <header id="header">
        <div class="logo">
            <div>
			<img class="img-responsive header-logo" src="http://localgovdigital.cloudapp.net/media/1005/lgd_logo.png" alt="LocalGov Digital Logo"/>
                <!--<h1><a href="/" id="logo">@Umbraco.Field("siteName", recursive: true)</a></h1>-->
                <span class="header-byline byline">@Umbraco.Field("byline", recursive: true)</span>
            </div>
        </div>
    </header>
    <!-- /Header -->
				
				
		
</div><div class="col-md-8">	
    @{ Html.RenderPartial("umbTopNavigation"); }
</div></div>
             <div class="row">
            <div class="col-md-12">
                <div id="alert" class="alert alert-warning alert-dismissable" role="alert">
                    <button type="button" class="close" data-dismiss="alert" onclick="hideMe()">&times;</button> 
                    <b>This our beta site</b><br/>We'd love to know what you think about it. Get in touch on <a class="twitter" href="https://twitter.com/LocalGovDigital">Twitter</a>, <a class="googleplus" href="https://plus.google.com/u/0/communities/114124478761452023264">Google+</a> or <a class="knowledgehub" href="https://knowledgehub.local.gov.uk/group/localgovdigital">the Knowledge Hub</a>.</div>
                </div>
         </div>
    @RenderBody()

    <!-- Footer -->
    <footer id="footer">
        <div class="row">
            <div class="col-xs-7">
            <!-- Copyright -->
            <div id="copyright">
                &copy; @DateTime.Now.Year @Umbraco.Field("copyright", recursive: true) 
            </div>
            <!-- /Copyright -->
            </div>
			<div class="col-xs-5">
			@{ Html.RenderPartial("umbSocial"); }
			</div>
        </div>
    </footer>
    <!-- /Footer -->
	</div>
